@model Accountant.Models.Login
@{
    ViewData["Title"] = "Login";
}
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";


}
 <h1 asp-for="Name">Login</h1>

<h4>Login</h4>
<div>
    <div class="col-md-12">
        <form asp-action="ScreenLogin">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <span asp-validation-for="Messages" class="text-danger"></span>
            <span asp-validation-for="Error" class="text-danger"></span>
              
           
             
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>   
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Passowrde" class="control-label"></label>
                <input asp-for="Passowrde" class="form-control" />
                <span asp-validation-for="Passowrde" class="text-danger"></span>
            </div>
            
            <div class="form-group" style="margin-top:10px">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <p style="margin-top:10px">اذا كنت تريد الحصول على حساب يمكنك تقديم طلب من <a href="~/MainUserTem/ScreenMainUserTem">هنا</a></p>
        </form>
    </div>
</div>