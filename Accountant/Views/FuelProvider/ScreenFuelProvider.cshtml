@model Accountant.Models.ViewModel.ViewModelFuelProvider

<div>


    <div class="form-group" style="margin:30px">
        <form asp-action="ScreenFuelProvider">
            <div asp-validation-summary="ModelOnly"></div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            

            <div class="form-group">
                <input asp-for="@Model.FuelProvider_M.Id" class="form-control" hidden />
            </div>
             

            
            <div class="form-group">
                <label asp-for="FuelProvider_M.NameFuelProvider" class="control-label"></label>
                <input asp-for="FuelProvider_M.NameFuelProvider" class="form-control">
                <span asp-validation-for="@Model.FuelProvider_M.NameFuelProvider" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="FuelProvider_M.stationLocation" class="control-label"></label>
                <input asp-for="FuelProvider_M.stationLocation" class="form-control" />
                <span asp-validation-for="FuelProvider_M.stationLocation" class="text-danger"></span>
            </div>



            <div class="form-group" style="margin-top:10px">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>

    <div>
        <form>
            <table class="table">
                <thead>
                    <tr>
                        <th>تاريخ التزويد</th>
                        <th>كمية الوقود</th>
                        <th>مصدر وقود</th>

                        <th>تعديل</th>
                        <th>خذف</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.FuelProvider_List)
                    {
                        <tr>
                            <td>@item.NameFuelProvider</td>
                            <td>@item.stationLocation</td>

                            <td><a class="btn btn-primary" href="~/FuelProvider/ScreenFuelProvider?EditFuelProvider=true&IDFuelProvider=@item.Id">نعديل</a></td>

                            <td><a class="btn btn-primary" href="~/FuelProvider/DeleteFuelProvider?id=@item.Id">خذف</a></td>

                        </tr>
                    }
                </tbody>
            </table>
        </form>


    </div>
</div>