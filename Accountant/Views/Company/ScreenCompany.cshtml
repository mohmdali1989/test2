@model Accountant.Models.Company
@inject IHttpContextAccessor HttpContextAccessor;
@{
    ViewData["Title"] = "Company";
}

<h1 asp-for="Name">Company</h1>
@if (!string.IsNullOrEmpty(HttpContextAccessor.HttpContext?.Session.GetString("NameCompany")))
{

    <h3>معلومات</h3>
}else
{
    <h2>من اجل الستمرار يجب ان يكون لدي شركة </h2>
}

 
<div class="row">
    <div class="col-md-12">
        <form asp-action="ScreenCompany">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <span asp-validation-for="Messages" class="text-danger"></span>
            <span asp-validation-for="Error" class="text-danger"></span>



            <div class="form-group">
                <label asp-for="CompanyName" class="control-label"></label>
                <input asp-for="CompanyName" class="form-control" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyFunction" class="control-label"></label>
                <input asp-for="CompanyFunction" class="form-control" />
                <span asp-validation-for="CompanyFunction" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top:10px">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
     
        </form>
    </div>
</div>