@model Car

<style>
    .div1 {
        display: flex;
    }

    .div2 {
        width: 200px;
        height: 320px;
        background: #123456;
        text-align: center;
        vertical-align: bottom;
        border: 3px solid black;
        border-radius: 20px;
        display: flex;
        justify-content: center;
        align-items: flex-end;
        margin: 10px
    }

    .saeve {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        margin: 10px
    }

    .aCar{
        margin:5px
    }

        .saeve input {
            width: 200px;
        }
</style>
<form asp-action="ScreenEditCar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div>

        <input type="text" asp-for="Id" class="form-control" hidden />
    </div>
    <div class="div1">
        <div class="div2 col-md-3">
            <a class="a1" href="#">

            </a>
        </div>
        <div class="col-md-10">
            <div class="form-group col-md-12">
                <label asp-for="NameCar" class="control-label"></label>
                <input asp-for="NameCar" class="form-control"  />
                <span asp-validation-for="NameCar" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="CarNumber" class="control-label"></label>
                <input asp-for="CarNumber" class="form-control" />
                <span asp-validation-for="CarNumber" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="CarWeight" class="control-label"></label>
                <input asp-for="CarWeight" class="form-control" />
                <span asp-validation-for="CarWeight" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="CarModel" class="control-label"></label>
                <input asp-for="CarModel" class="form-control" />
                <span asp-validation-for="CarModel" class="text-danger"></span>
            </div>
           <div class="form-group col-md-12">
                <label asp-for="IDDriver" class="control-label"></label>
                <select asp-for="IDDriver" class="form-control">
                    <option value="">--اختر السائق--</option>
                    @foreach (var item in ViewBag.driver)
                    {

                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="IDDriver" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="MaximumLoad" class="control-label"></label>
                <input asp-for="MaximumLoad" class="form-control" />
                <span asp-validation-for="MaximumLoad" class="text-danger"></span>
            </div>

            <a class="aCar" href="~/car/ScreenCarInsurance?ID_Insurance=@Model.Id">تامين السيارة </a>
            <a class="aCar" href="~/car/ScreenaCrLicense?ID_License=@Model.Id"> ترخيص السيارة </a>
        </div>
    </div>
    <div class="saeve">
        <input type="submit" value="حفظ" class="btn btn-primary" style="margin:-9px 0px" />
        <a class="btn btn-danger" style="margin:12px 0px ; width:200px" href="~/car/DeleteCar?ID_Dalete_Car=@Model.Id">حذف</a>
        <a asp-action="ScreenCar">Back to List</a>
    </div>
</form>

 
@section Scripts {
    @{
        //هذا مهم جدا لانه يقوم بفحص اذا البيانات فاغة ولا لا حسب الي موضع في الفيو اذا اخترنا ان يكون في بيانات
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}